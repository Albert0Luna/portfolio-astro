---
import { SITE_CONTENT_EN } from "../config/index";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import Projects from "../components/Projects.astro";
import Experience from "../components/Experience.astro";
import About from "../components/About.astro";
---

<Layout>
  <Hero {...SITE_CONTENT_EN.hero} />
  <Projects projects={SITE_CONTENT_EN.projects} />
  <Experience experience={SITE_CONTENT_EN.experience} />
  <About {...SITE_CONTENT_EN.about} name={SITE_CONTENT_EN.hero.name} />
</Layout>
